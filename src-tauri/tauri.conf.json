{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeDevCommand": "yarn dev",
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Â© 2022-2025 Trobonox (hello@trobo.dev)",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Kanban board application made for offline usage",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "Kanri",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "kanri",
  "mainBinaryName": "kanri",
  "version": "0.8.1",
  "identifier": "tech.trobonox.kanri",
  "plugins": {},
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Kanri",
        "width": 1400,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "/**/*"
        ],
        "enable": true
      },
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "'self' ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self'",
        "style-scr-elem": "'unsafe-inline' 'self'",
        "font-src": "'self' data:"
      }
    }
  }
}
